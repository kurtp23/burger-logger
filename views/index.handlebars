<h1>burgers</h1>

<h3>Here are all the burgers!</h3>

<ul>
    {{#each burgers}}
    <li>
        <h2> {{this.burger_name}} Burger</h2>
    </li>
    <form action="/" method="PUT">
        <button id={{this.id}} name="eat">EAT</button>
    </form>
    {{/each}}
</ul>

<form action="/" method="POST">
    <textarea type="text" name="burger"></textarea>

    <button type="submit">Submit</button>
</form>