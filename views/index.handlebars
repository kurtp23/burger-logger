<h1>burgers</h1>

<h3>Here are all the burgers!</h3>

<ul>
    {{#each burgers}}
    {{#if this.devoured}}
    {{else}}
    <li>
        <h2> {{this.burger_name}} Burger</h2>
    </li>
    <button id={{this.id}} class="eat">EAT</button>
    {{/if}}

    {{/each}}
</ul>
<h3>Here are all the burgers that have been ate</h3>
<ul>
    {{#each burgers}}
    {{#if this.devoured}}
    <li>
        <h2> {{this.burger_name}} Burger</h2>
    </li>
    {{/if}}


    {{/each}}
</ul>

<form action="/" method="POST">
    <textarea type="text" name="burger"></textarea>

    <button type="submit">Submit</button>
</form>